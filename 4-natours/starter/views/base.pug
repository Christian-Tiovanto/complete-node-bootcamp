    script(src='https://unpkg.com/esri-leaflet')
    script(src='https://unpkg.com/esri-leaflet-geocoder')
    script(src="https://unpkg.com/esri-leaflet-vector@4/dist/esri-leaflet-vector.js")
    script(src='/js/bundled/index.js' type='module')

